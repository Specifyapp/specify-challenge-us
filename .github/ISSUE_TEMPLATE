  - octocat
body:
  - type: markdown
    attributes:
      value: |
        Thanks for taking the time to file this application.
  - type: input
    id: file-extension
    attributes:
      label: Output file extension
      description: Which extension is your output file?
      placeholder: .css
    validations:
      required: true
  - type: textarea
    id: file-content
    attributes:
      label: Output file content
      description: What content do you expect in your developement environement ?
      value: ""
    validations:
      required: true
